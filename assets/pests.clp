               ;ОПИС ШАБЛОНІВ ФАКТІВ;опис шаблону шкідника містить дані про назву, клас, тип (комаха, лічинка),;розміри, наявність крил, здатність до польоту, форму тіла, кількість ніг,;та тип ротової порожнини (deftemplate MAIN::pest	(multislot  pest_name)	(slot name_pest_family)	(slot type_pest)	(slot size)	(multislot color)	(slot shape)	(slot wings)	(slot fly_ability)	(multislot body)	(slot legs)	(slot mouth_type)); шаблон опису рослини містить дані про назву рослини, сімейство, тип (), ; тип кореневої системи, стебла, форму листя, форму куща, квітів,; насіння, морозостійкість та посухостійкість(deftemplate MAIN::plant	(multislot name_plant)	(slot latin_name)	(slot family_plant)	(slot plant_type)	(slot root_type)	(slot steam_type)	(slot leaf_shape_type)	(slot brushing_type)	(slot flowers_type_sex)	(slot seed_type)	(slot frost_stable)	(slot dry_stable )); шаблон описує стан листя; для діагностування використовуються зміни в кольорі та механічні пошкодження(deftemplate MAIN::leaf_state    (multislot leaf_state_color)    (slot leaf_state_mec)    (slot leaf_type)); шаблон описує стан бутонів та бруньок відповідно до типу; для діагностування використовуються зміни в кольорі та механічні пошкодження(deftemplate MAIN::bud_state    (slot bud_type)    (slot bud_state_color)    (slot bud_state_mec)); шаблон описує стан насіння безпосередньо після висівання і після проростання; для діагностування використовуються зміни в кольорі та механічні пошкодження(deftemplate MAIN::seed_state    (slot seed_type)    (slot seed_state_color)    (multislot seed_state_mec)); шаблон описує стан кореня відповідно до типу; для діагностування використовуються зміни в кольорі та механічні пошкодження(deftemplate MAIN::root_state    (slot root_type)    (slot root_state_color)    (multislot root_state_mec)); шаблон описує стан кореня відповідно до типу; для діагностування використовуються зміни в кольорі та механічні пошкодження(deftemplate MAIN::steam_state    (slot steam_type)    (slot steam_state_color)    (multislot steam_state_mec)); шаблон описує стан зерна для зернових культур відповідно до типу; для діагностування використовуються зміни в кольорі та механічні пошкодження(deftemplate MAIN::ear_state    (slot ear_type)    (slot ear_state_color)    (multislot ear_state_mec)); шаблон описує стадію розвитку рослини; та визначає частини рослини, які йому відповідають(deftemplate MAIN::ceral_organogenesis    (multislot name_of_stage)    (multislot part_of_plants)); шаблон описує поточну інспекцію рослини; визначає відповідну територію, розміри, стадію життєвого циклу ; дату інспекції (deftemplate MAIN::inspection    (multislot name_plant)    (slot id_teritory)    (slot size_plant)    (slot life_cycle)    (slot data_inspection)); правило перевірки можливих шкідників; за стадією розвитку та типом рослини ; з урахуванням типу ротової порожнини шкідника (defrule MAIN::check_pests_by_organogenesis1 	(ceral_organogenesis (name_of_stage germination | seeding))	(pest (mouth_type gnawing))	(or (plant (name_plant Corn | Oat | Rye)) (plant (plant_type ceral)))	=>	(assert (check Ground Beetles)))	; правило перевірки можливих шкідників; за стадією розвитку та типом рослини ; з урахуванням типу ротової порожнини шкідника(defrule MAIN::check_pests_by_organogenesis2 	(ceral_organogenesis (name_of_stage brushing | tubing))	(or (plant (name_plant Corn | Oat | Rye)) (plant (plant_type ceral)))	=>	(assert (check Root aphids))	(assert (check Pseudococcidae))	(assert (check root)))(defrule MAIN::check_mouth_by_seed_gn 	(seed_state (seed_state_mec bitten laterally | 								gnawed | 								ragged hole | 								shallow pit | 								whole grain bitten | 								bites sinuous moves))	=>	(assert (pest (mouth_type gnawing))))	; правило перевірки жужелиці; якщо у зернових механічні пошкодження,; то шкідником може бути жужелиця(defrule MAIN::check_ceral_gnawing	(declare (salience -10)) 	(pest (mouth_type gnawing))	(plant (plant_type ceral))	=>	(assert (check Ground Beetles))); правило перевірки Жужелиць у випадку, коли знайдено личинку(defrule MAIN::probably_ground_beetles	(check Ground Beetles)	(found larva)	(pest (size ?size)		   (color brown | dark brown | pitch-brown)		   (shape elongated | oblong | long)		   (legs 6))    (>= ?size 15)	(<= ?size 30)	=>	(assert (probably Ground Beetles))	(assert (need find_adult_pest))); правило перевірки Жужелиць у випадку, коли знайдено шкідника	(defrule MAIN::check_ground_beetles(check Ground Beetles)(pest (size ?size)		   (color brown | dark brown | pitch-brown | black)		   (shape oval)		   (legs 6)		   (wings yes)		   (fly_ability limited | unklnown))    (>= ?size 10)	(<= ?size 20)=>  (assert (answer Ground Beetles))) ; якщо відповідь не знайдена і є ймовірність, що то жужелиці, ; то приймаємо їх за відповідь(defrule MAIN::try_ground_beetles	(declare (salience -100))	(probably Ground Beetles)	=>	(assert (answer Ground Beetles)))	; правило перевірки червеця; якщо знайдено шкідника ; за відповідними характеристиками, але інформації недостатньо; для кінцевого висновку(defrule MAIN::probably_pseudococcidae	(check Pseudococcidae)	(not(root_state (root_state_mec normal)				(root_state_color normal)))	(pest (size ?size)		   (color light grey | light pink | white |yellow)		   (shape elongated | oblong | oval)		   (legs 6))    (>= ?size 1.5)	(<= ?size 3)	(pest (mouth_type sucking))	=>	(assert (probably Pseudococcidae))	(assert (need about_pest)))	; правило перевірки червеця; якщо знайдено шкідника ; за відповідними характеристиками(defrule MAIN::check_pseudococcidae(check Pseudococcidae)(pest (size ?size)		   (color light grey | light pink | white |yellow)		   (shape elongated | oblong | oval)		   (legs 6)		   (body covered with excretions))	(legs reduced | absent | one_part)    (>= ?size 1.5)	(<= ?size 3)=>  (assert (answer Pseudococcidae))); якщо відповідь не знайдена і є ймовірність, що то червець,; то приймаємо його за відповідь(defrule MAIN::try_pseudococcidae	(declare (salience -100))	(probably Pseudococcidae)	=>	(assert (answer Pseudococcidae)))	; правило перевірки кореневої тлі; якщо знайдено шкідника ; за відповідними характеристиками, але інформації недостатньо; для кінцевого висновку(defrule MAIN::probably_root_aphids	(check Root Aphids)	(not(root_state (root_state_mec normal)				(root_state_color normal)))	(pest (size ?size)		   (color  light pink | white |light yellow | light green)		   (shape elongated | oblong | oval)		   (legs 6)		   (wings no))    (>= ?size 1.5)	(<= ?size 3)	(pest (mouth_type sucking))	=>	(assert (probably Root Aphids))	(assert (need about_pest)))	; правило перевірки кореневої тлі; якщо знайдено шкідника ; за відповідними характеристиками(defrule MAIN::check_root_aphids(check Root Aphids)(pest (size ?size)		   (color  light pink | white |light yellow | light green)		   (shape elongated | oblong | oval)		   (legs 6)		   (fly_ability no)		   (wings no))    (>= ?size 1.5)	(<= ?size 3)	(legs reduced two_part)	(pest (mouth_type sucking))=>  (assert (answer Root Aphids))); якщо відповідь не знайдена і є ймовірність, що то коренева тля,; то приймаємо її за відповідь(defrule MAIN::try_root_aphids	(declare (salience -100))	(probably Root Aphids)	=>	(assert (answer Root Aphids))); правило перевірки ; якщо помічено пошкодження листу ячменю ; на відповідній  стадії розвитку(defrule MAIN::check_plant_state1	 (ceral_organogenesis (name_of_stage tubing | earning | forming grains | poured weevil))	 (plant (plant_type ceral))	 (leaf_state (leaf_state_mec normal | twisted) 				 (leaf_state_color pale | red streaks))=>(assert (check Selenothrips Gramineum))); правило перевірки ячмінного трипса; якщо знайдено шкідника ; за відповідними характеристиками, але інформації недостатньо; для кінцевого висновку	(defrule MAIN::probably_selenothrips_gramineum	(check Selenothrips Gramineum)	(pest (size ?size)		   (color  brown | yellow | green | pitch-brown)		   (shape oblong | oval)		   (legs 6)		   (wings yes))    (>= ?size 1)	(<= ?size 3)	(pest (mouth_type sucking))	=>	(assert (probably Selenothrips Gramineum))	(assert (need mobility))	(assert (need about_pest))); правило перевірки кореневої тлі; якщо знайдено шкідника ; за відповідними характеристиками	(defrule MAIN::check_selenothrips_gramineum(check Selenothrips Gramineum)(pest (size ?size)		   (color  light pink | white |light yellow | light green)		   (shape elongated | oblong | oval)		   (legs 6)		   (fly_ability yes)		   (wings yes))    (>= ?size 1.5)	(<= ?size 3)	(mobility hight)	(wings two_pair)	(pest (mouth_type sucking))=>  (assert (answer Selenothrips Gramineum))); якщо відповідь не знайдена і є ймовірність, що то ячмінний трипс,; то приймаємо його за відповідь(defrule MAIN::try_selenothrips_gramineum	(declare (salience -100))	(probably Selenothrips Gramineum)	=>	(assert (answer Selenothrips Gramineum)))	; правило перевірки ; якщо помічено пошкодження листя ; на відповідній  стадії розвитку(defrule MAIN::check_plant_state2	 (ceral_organogenesis (name_of_stage forming grains | poured weevil | lactic ripness | doughy maturity | wax ripness))	 (plant (plant_type ceral))	 (leaf_state (leaf_state_mec normal ) 				 (leaf_state_color pale | white))	(steam_state (steam_state_mec normal))	(ear_state (ear_state_mec normal | deformated)				(ear_state_color white))				 =>(assert (check Haplothrips Tritici))); правило перевірки пшеничного трипса; якщо знайдено шкідника ; за відповідними характеристиками, але інформації недостатньо; для кінцевого висновку(defrule MAIN::probably_haplothrips_tritici1	(check Haplothrips Tritici)	(found larva)	(pest (size ?size)		   (color  red | green | yellow)		   (shape oblong | elongated | thin)		   (legs 6)		   (wings no))    (>= ?size 1)	(<= ?size 2)	(pest (mouth_type sucking))	=>	(assert (probably Haplothrips tritici))	(assert (need find_adult_pest))); правило перевірки пшеничного трипса; якщо знайдено шкідника ; за відповідними характеристиками, але інформації недостатньо; для кінцевого висновку	(defrule MAIN::probably_haplothrips_tritici2	(check Haplothrips Tritici)	(pest (size ?size)		   (color  black | brown )		   (shape oblong | elongated | thin)		   (legs 6)		   (wings yes))    (>= ?size 1)	(<= ?size 3)	(pest (mouth_type sucking))	=>	(assert (probably Haplothrips tritici))	(assert (need mobility))	(assert (need about_pest)))	; правило перевірки кореневої тлі; якщо знайдено шкідника ; за відповідними характеристиками	(defrule MAIN::check_haplothrips_tritici(check Haplothrips tritici)	(pest (size ?size)		   (color  black | brown )		   (shape oblong | elongated | thin)		   (legs 6)		   (wings yes)		   (fly_ability yes))    (>= ?size 1)	(<= ?size 3)	(pest (mouth_type sucking))	(mobility hight)	(wings two_pair)	(pest (mouth_type sucking))=>  (assert (answer Haplothrips Tritici))); якщо відповідь не знайдена і є ймовірність, що то ячмінний трипс,; то приймаємо його за відповідь(defrule MAIN::try_haplothrips_tritici	(declare (salience -100))	(probably Haplothrips Tritici)	=>	(assert (answer Haplothrips Tritici)));класи шкідників, які підлягають діагностуванню	(deffacts genus-included (genus Root Aphids) (genus Ground Beetles) (genus Mealybugs) (genus Selenothrips Gramineum) (genus Haplothrips Tritici) (genus Helicotylenchus) (genus Hemicriconemoides) (genus Heterodera) (genus Hirschmanniella) (genus Longidorus) (genus Meloidogyne) (genus Meloidodera) (genus Paratylenchus) (genus Pratylenchus) (genus Radopholus) (genus Rotylenchulus) (genus Trichodorus) (genus Tylenchorhynchus) (genus Tylenchulus) (genus Xiphinema) );шкідники, які підлягають діагностуванню(deffacts pests-indicated (pest_id Aphidae) (pest_id Carabidae) (pest_id Pseudococcidae) (pest_id Thripidae) (pest_id Haplothrips tritici) (pest_id Helicotylenchus) (pest_id Hemicriconemoides) (pest_id Heterodera) (pest_id Hirschmanniella) (pest_id Longidorus) (pest_id Meloidogyne) (pest_id Meloidodera) (pest_id Paratylenchus) (pest_id Pratylenchus) (pest_id Radopholus) (pest_id Rotylenchulus) (pest_id Trichodorus) (pest_id Tylenchorhynchus) (pest_id Tylenchulus) (pest_id Xiphinema) ) 